@model CreateAttendanceDto
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">


<h4 style="color:#0d6efd;">
    <i class="bi bi-blockquote-left"></i>
    أضافه حضور إو إنصرف لموظف
</h4>
<hr />

<div class="card">
    <div class="card-body">
        <form id="frmCreate" method="post" asp-action="createAddendance">
            <div class="row">
                <div class="col-md-3">
                    <div class="mb-3 custom-form">
                        <label for="productname"> الموظف</label>
                        <select class="form-control select2" asp-for="Emp_Id" asp-items="@(new SelectList(Model.Employees,"EmpId" ,"Name1"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="Emp_Id" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="mb-3 custom-form">
                        <label for="productname">  الفرع</label>
                        <select class="form-control select2" asp-for="StoreId" asp-items="@(new SelectList(Model.stores,"StoreId" ,"StoreDescA"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="StoreId" class="text-danger"></span>

                    </div>
                </div>


                <div class="col-md-3">
                    <div class="mb-3 custom-form">
                        <label for="productname">  الشيفت</label>
                        <select class="form-control select2" asp-for="ShftId" asp-items="@(new SelectList(Model.shifts,"ShiftId" ,"Name1"))">
                            <option></option>
                        </select>
                        <span asp-validation-for="ShftId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="mb-3 custom-form">
                        <label class="text-muted">التاريخ والوقت</label>
                        <input class="form-control" asp-for="TrDate" type="datetime-local" />
                        <span asp-validation-for="TrDate" class="text-danger"></span>

                    </div>
                </div>


                <div class="col-md-3">
                    <div class="mb-3 custom-form">
                        <label for="productname">حضور إم إنصراف</label>
                        <select class="form-control select2" asp-for="In">
                            <option selected></option>
                            <option value="true">حضور</option>
                            <option value="false">انصراف</option>
                        </select>
                        <span asp-validation-for="In" class="text-danger"></span>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-3">
                        <div class="mb-3 custom-form">
                            <button type="submit" class="btn btn-primary"> <i class="bi bi-check2-circle"></i>  حفظ </button>
                            <a class="btn btn-outline-secondary" asp-action="report"> <i class="bi bi-x-circle-fill"></i>  إلغاء  </a>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

